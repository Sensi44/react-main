{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [                     // Массив конфигураций
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb/base",
        "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "linebreak-style": 0,
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }]
    }
}
